<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/calorietitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="143dp"
        android:textSize="24sp" />
    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_alignStart="@+id/calorietitle"
        android:layout_below="@+id/calorietitle"
        android:background="#000" />

    <View
        android:layout_width="1000dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/calorietitle"
        android:background="#000" />

    <TextView
        android:id="@+id/bmititle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:textSize="24sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/calorietitle"
        android:background="#000" />


    <LinearLayout
        android:id="@+id/ListLinear"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_alignEnd="@+id/calorietitle"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-198dp"
        android:layout_marginTop="34dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/HistoryList"
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:layout_weight="1"
            android:scrollbars="vertical" />
    </LinearLayout>

    <TextView
        android:id="@+id/approx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="227dp" />

    <TextView
        android:id="@+id/weightLosstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/approx"
        android:layout_toEndOf="@+id/calorietitle" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/approx"
        android:layout_toEndOf="@+id/weightLosstext" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="#000" />

    <TextView
        android:id="@+id/stepstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/approx"
        android:layout_marginTop="-227dp" />

    <TextView
        android:id="@+id/totalsteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/approx"
        android:layout_marginTop="-227dp"
        android:layout_toEndOf="@+id/calorietitle" />

</RelativeLayout>
